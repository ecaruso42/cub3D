NAME 		=	cub3D

LIBFT		=	/include/libft/libft.a

CC			=	gcc -g
FLAGS		=	-Wall -Wextra -Werror
RM			=	rm -f

SRC			=	\
					cub3d.c

OBJ 		= 	$(SRC:%.c=%.o)

%.o: %.c
	$(CC) $(FLAGS) -I/usr/include -Imlx_linux -O3 -c $< -o $@

all : $(NAME)

# RED = \033[0;31m
# ORANGE = \033[0;33m
# YELLOW = \033[0;93m
# GREEN = \033[0;32m
# BLUE = \033[0;34m
# INDIGO = \033[0;94m
# VIOLET = \033[0;35m
# RESET = \033[0m

$(NAME): $(OBJ)
		make -C libft all bonus
		$(CC) $(OBJ) $(LIBFT) -Lmlx -lmlx -framework OpenGL -framework AppKit -o $(NAME)
		@echo "\nLinked into executable \033[0;32mminishell\033[0m."
